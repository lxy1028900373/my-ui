/* components/wux-dialog/notify.wxss */
.notify{
    width: 100%;
    padding: 16rpx 32rpx;
    position: fixed;
    top: -100rpx;
    left: 0;
    z-index: 100;
    transition: top ease-out .3s;
    background-color: #1989fa;
    box-sizing: border-box;
}
.dialog-in{
    top: 0;
}
.theme-danger{
    background-color: #ee0a24;
}
.theme-success{
    background-color: #07c160;
}
.title{
    width: 100%;
    height: 100%;
    text-align: center;
    vertical-align: middle;
    color: #fff;
    font-size: 28rpx;
    white-space: pre-wrap;
    word-wrap: break-word;
}